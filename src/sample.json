{
	"pageHeading": "Application ",
	"formType": "simple",
	"keyField": "_id",
	"form": {
		"collectionName": "application",
		"fields": [
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					
					{
						"type": "label-view",
						"key": "name",
						"className": "flex-6",
						"props": {
							"label": "Project Role Name",
							"label_width": 100,
							"value_width": 200,
							"value_in_next_row": false
						},
						"hideExpression": "!model.isEdit"
					}
				]
			},
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "input",
						"key": "name",
						"className": "flex-5",
						"templateOptions": {
							"label": "Project Role Name",
							"maxLength": 50,
							"required": true,
							"placeholder": "Project Role Name"
						},
						"hideExpression": "model.isEdit"
					}
				]
			},
			{
				"type": "textarea",
				"key": "Description",
				"templateOptions": {
					"label": "Anything about this Project Role",
					"placeholder": "Description",
					"rows": 5
				}
			},
			{
				"key": "status",
				"type": "select",
				"defaultValue": "A",
				"templateOptions": {
					"label": "Status",
					"options": [
						{
							"label": "Active",
							"value": "A"
						},
						{
							"label": "Disable",
							"value": "D"
						}
					],
					"required": true
				},
				"hideExpression": "!model.isEdit"
			}
		],
		"defaultValues": [
			{
				"colName": "status",
				"value": "A",
				"type": "string"
			},{
				"colName": "_id",
				"value": "SEQ|APP",
				"type": "string"
			}
		]
	},
	"onCancelRoute": "/list/application"
}