{
  "pageHeading": "Test Result Name",
  "formType": "simple",
  "keyField": "_id",
  "form": {
    "collectionName": "test_result",
    "fields": [
      {
        "fieldGroupClassName": "display-flex",
        "fieldGroup": [
          {
            "type": "label-view",
            "key": "_id",
            "className": "flex-6",
            "props": {
              "label": "Test Result Id",
              "label_width": 100,
              "value_width": 200,
              "value_in_next_row": false
            },
            "hideExpression": "!model.isEdit"
          },
          {
            "type": "label-view",
            "key": "name",
            "className": "flex-6",
            "props": {
              "label": "Test Result Name",
              "label_width": 100,
              "value_width": 200,
              "value_in_next_row": false
            },
            "hideExpression": "!model.isEdit"
          }
        ]
      },
      {
        "type": "input",
        "key": "name",
        "templateOptions": {
          "label": "Test Result Name",
          "maxLength": 80,
          "required": true,
          "placeholder": "Test Result Name"
        },
        "hideExpression": "model.isEdit"
      },
      {
        "fieldGroupClassName": "display-flex",
        "fieldGroup": [
          {
            "type": "html-input",
            "key": "test_data",
            "className": "flex-6",
            "props": {
              "label": "Test Data",
              "disabled": true
            }
          },
          {
            "type": "html-input",
            "key": "expected_result",
            "className": "flex-6",
            "props": {
              "label": "Expected Result",
              "disabled": true
            }
          }
        ]
      },
      {
        "fieldGroupClassName": "display-flex",
        "fieldGroup": [
          {
            "key": "testcase_date",
            "type": "date-input",
            "className": "flex-6",
            "props": {
              "label": "Test Case Date",
              "placeholder": "Test Case Date",
              "required": true
            }
          },
          {
            "key": "result_status",
            "type": "radio",
            "className": "flex-6",
            "props": {
              "label": "Test Result",
              "required": true,
              "options": [
                {
                  "value": "Pass",
                  "label": "P"
                },
                {
                  "value": "Fail",
                  "label": "F"
                }
              ]
            }
          }
        ]
      },
      {
        "fieldGroupClassName": "display-flex",
        "fieldGroup": [
          {
            "type": "image-input",
            "key": "result_proof",           
			 "className": "flex-4",
           "bind_key": "name",
		   "role":"test_case",
            "props": {
				"refId": "name",
				"label": "Result Proof",
              "required": true
            },
			"hideExpression": "!model.result_status"
          },
          {
            "type": "html-input",
            "key": "actual_result",
            "className": "flex-8",
            "props": {
              "label": "Actual Result",
			  "required": true
            },
			"hideExpression": "!model.result_status"
          }
        ]
      },
      {
        "key": "status",
        "type": "select",
        "defaultValue": "A",
        "templateOptions": {
          "label": "Status",
          "options": [
            {
              "label": "Active",
              "value": "A"
            },
            {
              "label": "Disable",
              "value": "D"
            }
          ],
          "required": true
        },
        "hideExpression": "!model.isEdit"
      }
    ],
    "defaultValues": [
      {
        "colName": "status",
        "value": "A",
        "type": "string"
      }
    ]
  },
  "onCancelRoute": "/list/test_result"
}
