{
	"pageHeading": "Functional Testing",
	"formType": "simple",
	"editMode": "popup",
	"keyField": "_id", 
	"form": {
	  "collectionName": "regression",
    "fields": [
      {
        "fieldGroupClassName": "display-flex",
        "fieldGroup": [
        {
          "type": "select-input",
          "key": "sprint_id",
          "className": "flex-2",
          "props": {
          "label": "Sprint Id",
          "placeholder": "Sprint Id",
          "labelPropTemplate": " {{_id}}",
          "Collections": "sprint",
          "multifilter":true,
          "multifiltertype": "local",
          "local_name":"project_id",
          "multifilter_condition": {
            "clause": "AND",
            "conditions": [
            {
              "column": "project_id",
              "operator": "EQUALS",
              "type": "string",
              "value": ""
            }
            ]
          },
          "required": true,
          "labelProp": "_id",
          "valueProp": "_id"
          }
        },
        {
          "type": "input",
          "key": "regression_id",
          "className": "flex-6",
          "props": {
          "label": "Regression Name/ID",
          "placeholder": "Regression Name/ID",
          "required": true,
          "maxLength": 10,
          "pattern": "^[a-zA-Z0-9]+$"
          }
        }
        ]
      },
    
      {
        "type": "html-input",
        "key": "description",
        "className": "flex-6",
        "props": {
        "label": "Regression Description"
        }
      },{
        "type": "select",
        "key": "status",
        "className": "flex-6",
        "props": {
          "label": "Sprint Status",
          "options": [
            {
              "label": "Active",
              "value": "A"
            },
            {
              "label": "Inactive",
              "value": "I"
            }
          ]
        },
      
        "expressions": {
          "hide": "!model.isEdit"
        }
        }
      ], "defaultValues":[
        {
           "colName":"status",
           "value":"A",
           "type":"string"
        }, {
            "colName":"_id",
            "source":"project_id",
            "type":"prefix"
            
         }
     ]
	},
	"onCancelRoute": "list/functionaltesting"
  }
  