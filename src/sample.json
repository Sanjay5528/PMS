{
	"pageHeading": "Test Case Scenario",
	"formType": "simple",
	"editMode": "page",
	"keyField": "_id",
	"form": {
		"collectionName": "testcase",
		"fields": [
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "input",
						"key": "test_case_name",
						"className": "flex-6",
						"props": {
							"label": "Test Case Name",
							"required": true
						}
					},
					{
						"key": "test_case_scenario",
						"type": "select",
						"className": "flex-6",
						"props": {
							"label": "Test Case Scenario",
							"options": [
								{
									"label": "Positive",
									"value": "P"
								},
								{
									"label": "Negative",
									"value": "N"
								}
							],
							"required": true
						}
					}
				]
			},{
				"type": "html-input",
				"key": "test_description",
				"className": "flex-6",
				"props": {
					"label": "Test Description",
					"required": true
				}
			},
			{
				"type": "html-input",
				"key": "test_data",
				"className": "flex-6",
				"props": {
					"label": "Test Data",
					"required": true
				}
			},
			{
				"type": "html-input",
				"key": "expected_result",
				"className": "flex-6",
				"props": {
					"label": "Expected Result",
					"required": true
				},
				"maxlength": 500
			}
		]
	}
}