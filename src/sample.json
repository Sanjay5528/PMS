{
  "pageHeading": "Requirement",
  "formType": "simple",
  "editMode": "popup",
  "keyField": "_id",
  "form": {
    "collectionName": "requirement",
    "fields": [
      {
        "type": "input",
        "key": "requirement_name",
        "props": {
          "label": "Requirement Name",
          "placeholder": "Requirement Name",
          "pattern": "^[a-zA-Z0-9&>/;,:-_/]+( [a-zA-Z0-9&>/;,:-_/!@-]+)*$",
          "required": true
        }
      },
      {
        "type": "html-input",
        "key": "requirement_description",
        "className": "flex-6",
        "props": {
            "label": "Requirement Description",
            "required": true
        },
        
        "maxlength": 2000
    },
			{
				"key": "status",
				"type": "select",
				"defaultValue": "A",
				"templateOptions": {
					"label": "Status",
					"options": [
						{
							"label": "Active",
							"value": "A"
						},
						{
							"label": "Disable",
							"value": "D"
						}
					],
					"required": true
				},
				"hideExpression": "!model.isEdit"
			}
     
    ],
		"defaultValues": [
			{
				"colName": "status",
				"value": "A",
				"type": "string"
			}
		]
  },
  "onCancelRoute": "list/module"
}