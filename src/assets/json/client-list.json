{
	"pageHeading": "Requirement",
	"formType": "simple",
	"editMode": "popup",
	"keyField": "_id",
	"form": {
	"collectionName": "requirement",
	"fields": [
	
				
				{
					"type": "input",
					"key": "requirement_name",				
					"className": "flex-2",
					"props": {
					"label": "Requirement Name",
					"placeholder": "Requirement Name",
					"pattern": "^[a-zA-Z0-9&>/;,:-_/]+( [a-zA-Z0-9&>/;,:-_/!@-]+)*$",
					"required": true
					}
				},
		
		{
		"type": "html-input",
		"key": "requirement_description",
		"className": "flex-6",
		"props": {
			"label": "Requirement Description"
		},
		
		"maxlength": 2000
	},
	{
		"fieldGroupClassName": "display-flex",
		"fieldGroup": [
	{
		"type": "select-input",
		"key": "sprint_id",
		"className": "flex-6",
		"props": {
			"label": "Sprint Id",
			"placeholder": "Sprint Id",
			"multifilter": true,
			"Collections": "sprint",
			"multifiltertype": "local",
			"local_name": "project_id",
			"multifilter_condition": {
			  "clause": "AND",
			  "conditions": [
				{
				  "column": "project_id",
				  "operator": "EQUALS",
				  "type": "string",
				  "value": ""
				}
			  ]
			},
			"labelProp": "_id",
			"valueProp": "_id"
		}
	},
	{
		"type": "select-input",
		"key": "module_id",
		"className": "flex-6",
		"props": {
			"label": "Module Name",
			"placeholder": "Module Name",
			"multifilter": true,
			"Collections": "modules",
			"multifiltertype": "local",
			"local_name": "project_id",
			"multifilter_condition": {
			  "clause": "AND",
			  "conditions": [
				{
				  "column": "project_id",
				  "operator": "EQUALS",
				  "type": "string",
				  "value": ""
				}
			  ]
			},
			"labelProp": "modulename",
			"valueProp": "moduleid"
		}
	}
]
},
			{
				"key": "status",
				"type": "select",
				"defaultValue": "A",
				"templateOptions": {
					"label": "Status",
					"options": [
						{
							"label": "Active",
							"value": "A"
						},
						{
							"label": "Disable",
							"value": "D"
						}
					],
					"required": true
				},
				"hideExpression": "!model.isEdit"
			}
	
	],
		"defaultValues": [
			{
				"colName": "status",
				"value": "A",
				"type": "string"
			}
		]
	},
	"onCancelRoute": "list/requirement"
}