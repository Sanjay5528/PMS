{
	"pageHeading": "Designation ",
	"formType": "simple",
	"keyField": "_id",
	"form": {
		"collectionName": "designation",
		"fields": [
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "label-view",
						"key": "_id",
						"className": "flex-6",
						"props": {
							"label": "Designation ID",
							"label_width": 100,
							"value_width": 200,
							"value_in_next_row": true
						},
						"hideExpression": "!model.isEdit"
					},
					{
						"type": "label-view",
						"key": "name",
						"className": "flex-6",
						"props": {
							"label": "Designation Name",
							"label_width": 100,
							"value_width": 200,
							"value_in_next_row": true
						},
						"hideExpression": "!model.isEdit"
					}
				]
			},
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "input",
						"key": "_id",
						"className": "flex-1",
						"props": {
							"label": "Designation ID",
							"placeholder": "Designation ID",
							"required": true,
							"maxLength": 10,
							"pattern": "^[A-Z][a-zA-Z]{1,}$"
						},
						"hideExpression": "model.isEdit"
					},{
						"type": "number",
						"key": "hierarchy",
						"className": "flex-1",
						"props": {
							"label": "Hierarchy Order",
							"placeholder": "Hierarchy Order",
							"required": true,
							"maxLength": 10				
						}
					},
					{
						"type": "input",
						"key": "name",
						"className": "flex-5",
						"templateOptions": {
							"label": "Designation Name",
							"maxLength": 50,
							"required": true,
							"placeholder": "Designation Name"
						},
						"hideExpression": "model.isEdit"
					}
				]
			},
			{
				"type": "textarea",
				"key": "Description",
				"templateOptions": {
					"label": "Anything about this Designation",
					"placeholder": "Description",
					"rows": 5
				}
			},
			{
				"key": "status",
				"type": "select",
				"defaultValue": "A",
				"templateOptions": {
					"label": "Status",
					"options": [
						{
							"label": "Active",
							"value": "A"
						},
						{
							"label": "Disable",
							"value": "D"
						}
					],
					"required": true
				},
				"hideExpression": "!model.isEdit"
			}
		],
		"defaultValues": [
			{
				"colName": "status",
				"value": "A",
				"type": "string"
			}
		]
	},
	"onCancelRoute": "/list/desigination"
}