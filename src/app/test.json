{
	"pageHeading": "Team Group",
	"formType": "simple",
	"keyField": "_id",
	"form": {
		"collectionName": "team_specification",
		"fields": [
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "input",
						"key": "name",
						"className": "flex-5",
						"templateOptions": {
							"label": "Team  Name",
							"maxLength": 50,
							"required": true,              
							"pattern": "^[a-zA-Z0-9&>/;,:-_/@]+( [a-zA-Z0-9&>/;,:-_/!@-]+)*$",
							"placeholder": "Team  Name"
						}
					}
				]
			},
			{
				"type": "html-input",
				"key": "description",
				"templateOptions": {
					"label": "Anything about this Team ",
					"placeholder": "Description",
					"rows": 5
				}
			},
			{
				"key": "status",
				"type": "select",
				"defaultValue": "A",
				"templateOptions": {
					"label": "Status",
					"options": [
						{
							"label": "Active",
							"value": "A"
						},
						{
							"label": "Disable",
							"value": "D"
						}
					],
					"required": true
				},
				"hideExpression": "!model.isEdit"
			}
		],
		"defaultValues": [
			{
				"colName": "status",
				"value": "A",
				"type": "string"
			},{
				"colName": "_id",
				"value": "SEQ|TEAM|{{project_id}}",
				"type": "string"
			}
		]
	},
	"onCancelRoute": "/list/projectteam"
}